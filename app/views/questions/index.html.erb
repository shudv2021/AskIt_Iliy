<h1> All Questions </h1>

<%=link_to 'Ask question', new_question_path, class: 'mb-2 btn btn-primary'%>
<%@questions.reverse.each do |question|%>
  <article class='card mb-2'>
    <div class='card-body'>
      <h4> <%=question.title%></h4>
      <%=link_to 'Edit', edit_question_path(question), class: 'btn btn-primary'%>
      <%=link_to 'Delete', question_path(question), data: {method: :delete, confirm: 'Are your sure?'},
                          class: 'btn btn-danger'%>      
    </div>
  </article>

<%end%>


<p>
<%=link_to 'Add question', new_question_path%>
</p>