<%=form_with model: @question do |f|%>
<div>
<%=f.label :title%>
  <%=f.text_field :title, required: true, minlength: 2, placeholder: 'title' %>
</div>

<div>
<%=f.label :body%>
  <%=f.text_area :body, required: true, minlength: 2, size: '75x10', placeholder: 'Ask your qiestion?'%>
</div>
<div>
  <%=f.submit%>
</div>

<%end%>