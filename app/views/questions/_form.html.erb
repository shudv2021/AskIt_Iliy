<%=render 'shared/errors', object: @question%>

<%=form_with model: @question do |f|%>
<div class='mb-3 row'>
  <div class='col-sm-2 col-form-label'>
    <%=f.label :title%>
  </div>
  <div class='col-sm-10 col-form-label'>
    <%=f.text_field :title, placeholder: 'title', class: 'from-control' %>
  </div>
</div>

<div class='mb-3 row'>
  <div class='col-sm-2 col-form-label'>
    <%=f.label :body%>
  </div>
  <div class='col-sm-10 col-form-label'>
    <%=f.text_area :body, size: '75x10', placeholder: 'Ask your qiestion?', 
                        class: 'from-control'%>
  </div>
</div>

<div>
  <%=f.submit class: 'btn btn-primary'%>
</div>

<%end%>